<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <% if(user){ %>
      <form action="/file/upload" method="post" enctype="multipart/form-data">
        <% if(folders.length > 0) { %>
          <p>Choose the root folder</p>
          <br />
          <% folders.forEach(folder => { %>
            <input type="radio" name="folderid" id="folderid" value=<%= folder.id%>>
            <label for="folderid"><%= folder.name %></label>
            <br />
          <% }); %>
          <label for="filename">File Name</label>
          <br />
          <input type="text" name="filename" id="filename" />
          <br />
          <input
            type="file"
            name="file-upload"
            id="file-upload"
          />
          <input type="hidden" name="userid" id="userid" value=<%= user.id %>>
          <br />
          <button type="submit">Upload File</button>
          <% }else{ %>
            <p>You have not created any folders yet.</p>
            <p>Files must be stored in a folder.</p>
            <button onclick="location.href='/folders/new-folder'">Create New Folder</button>
          <% } %>
      </form>
      <br />
      <!-- <form action="/files/upload" method="post" enctype="multipart/form-data">
        <br />
        <input
          type="file"
          name="files-upload"
          id="files-upload"
          multiple
        />
        <input type="hidden" name="folderId" id="folderId" value="1">
        <input type="hidden" name="userId" id="userId" value=<%= user.id %>>
        <button type="submit">Upload Files</button>
      </form> -->
    <% } %>
  </body>
</html>
