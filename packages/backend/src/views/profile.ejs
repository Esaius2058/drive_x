<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Drive X</title>
</head>
<body>
    <% if (user) { %>
        <h1>Welcome, <%= userName %></h1>
        <% if(folders.length !== 0) { %>
        <h1>Your Folders</h1>
            <ul>
            <% folders.forEach(folder => { %>
                <li>
                    <h1><%= folderNames[folder.folderId] %></h1>
                    <% if (folder.files.length !== 0) { %>
                        <ul>
                            <% folder.files.forEach(file => { %>
                                <li><%= file.name %></li>
                            <% }) %>
                        </ul>
                        <button onclick="location.href='/upload-form'">Upload File</button>
                    <% } else { %>
                        <h1>This folder is empty</h1>
                        <p>Upload a file</p>
                        <button onclick="location.href='/upload-form'">Upload File</button>
                    <% } %>
                </li>
            <% }) %>
            </ul>
        <% } else { %>
            <h1>You have no folders</h1>
            <p>Create a folder</p>
            <button onclick="location.href='/create-folder'">Create Folder</button>
        <% } %>
        <button onclick="location.href='/log-out'">Log Out</button>
    <% } else { %>
        <h1>Please log in or sign up</h1>
        <button onclick="location.href='/log-in'">Log In</button>
        <button onclick="location.href='/sign-up'">Sign Up</button>
    <% } %>
</body>
</html>